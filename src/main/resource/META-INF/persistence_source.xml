<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
		http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
  <persistence-unit name="pc_unit" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	  <class>kaiyi.app.xhapp.entity.access.VisitorUser</class>
	  <class>kaiyi.app.xhapp.entity.access.VisitorMenu</class>
	  <class>kaiyi.app.xhapp.entity.access.RoleAuthorizationMenu</class>
	  <class>kaiyi.app.xhapp.entity.access.Account</class>
	  <class>kaiyi.app.xhapp.entity.access.VisitorRole</class>
	  <class>kaiyi.app.xhapp.entity.curriculum.Course</class>
	  <class>kaiyi.app.xhapp.entity.curriculum.CourseComment</class>
	  <class>kaiyi.app.xhapp.entity.curriculum.Category</class>
	  <class>kaiyi.app.xhapp.entity.curriculum.Teacher</class>
	  <class>kaiyi.app.xhapp.entity.curriculum.CourseProblem</class>
	  <class>kaiyi.app.xhapp.entity.pub.Configure</class>
	  <class>kaiyi.app.xhapp.entity.log.ShortMessageSenderNote</class>
	  <class>kaiyi.app.xhapp.entity.pages.DisplayMap</class>
	  <class>kaiyi.app.xhapp.entity.log.ShortMessageSenderNote</class>
	  <properties>
         <property name="hibernate.dialect" value="kaiyi.puer.db.MySQL5DialectUseInnoDB"/>
         <property name="hibernate.max_fetch_depth" value="3"/>
         <property name="hibernate.hbm2ddl.auto" value="update"/>
	     <property name="hibernate.jdbc.fetch_size" value="100"/>
	     <property name="hibernate.jdbc.batch_size" value="30"/>
	     <property name="hibernate.show_sql" value="true"/>
	     <property name="hibernate.format_sql" value="true"/>
		 <property name="hibernate.dialect.storage_engine" value="InnoDB"/>
	     <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
	     <property name="javax.persistence.validation.mode" value="none"/>
	     <property name="hibernate.cache.use_second_level_cache" value="true"/>
	     <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
		 <property name="hibernate.cache.use_query_cache" value="true"/>
		 <property name="hibernate.cache.provider_configuration_file_resource_path" value="/WEB-INF/classes/ehcache.xml"/>
      </properties>
  </persistence-unit>
</persistence>